<?xml version="1.0" encoding="utf-8"?>

<com.gsdstr.ipbox.view.CheckableFrameLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="70dp"
	android:layout_width="wrap_content">

	<RelativeLayout
		android:id="@+id/channel_layout"
		android:layout_height="match_parent"
		android:layout_width="match_parent"
		android:padding="7dp"
		android:layout_margin="3dp">

		<TextView
			android:id="@+id/channel_title"
			android:layout_width="match_parent"
			android:layout_height="22dp"
			android:layout_alignParentTop="true"
			android:paddingLeft="5dip"
			android:textSize="18sp"
			android:textStyle="bold"
			android:textAppearance="?android:attr/textAppearanceLarge"
			android:minHeight="?android:attr/listPreferredItemHeight"
			android:layout_toRightOf="@+id/channel_icon"
			android:text="@string/test_line"
			android:gravity="center"
			android:lines="1"
			/>

		<TextView
			android:id="@+id/channel_sub_text"
			android:layout_width="match_parent"
			android:layout_height="15dp"
			android:layout_toRightOf="@+id/channel_icon"
			android:layout_below="@+id/channel_title"
			android:paddingLeft="3dp"
			android:paddingRight="3dp"
			android:textSize="14sp"
			android:textAppearance="?android:attr/textAppearanceLarge"
			android:minHeight="?android:attr/listPreferredItemHeight"
			android:text="@string/test_line"
			android:gravity="center"
			android:lines="1"
			android:visibility="gone"
			/>

		<TextView
			android:id="@+id/channel_sub_sub_text"
			android:layout_width="match_parent"
			android:layout_height="15dp"
			android:layout_toRightOf="@+id/channel_icon"
			android:layout_below="@+id/channel_sub_text"
			android:paddingLeft="3dp"
			android:paddingRight="3dp"
			android:textSize="14sp"
			android:textAppearance="?android:attr/textAppearanceLarge"
			android:minHeight="?android:attr/listPreferredItemHeight"
			android:text="@string/test_line"
			android:gravity="center"
			android:lines="1"
			android:visibility="gone"
			/>


		<ImageView
			android:id="@+id/channel_icon"
			android:paddingTop="5dip"
			android:layout_width="40dp"
			android:layout_height="40dp"
			android:layout_alignParentLeft="true"
			android:layout_centerVertical="true"
			android:src="@drawable/wheel"
			android:scaleType="fitCenter"
			android:contentDescription="@string/app_name"
			/>

	</RelativeLayout>

</com.gsdstr.ipbox.view.CheckableFrameLayout>