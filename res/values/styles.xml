<resources>

	<style name="BoxTheme.Light" parent="Theme.Sherlock.Light">
		<item name="android:windowNoTitle">true</item>
		<item name="android:gridViewStyle">@style/Widget.ListView.Light</item>
	</style>

	<style name="BoxTheme.Black" parent="Theme.Sherlock">
		<item name="android:windowNoTitle">true</item>
		<item name="actionBarStyle">@style/Widget.Sherlock.Light.ActionBar.Solid.Inverse</item>
		<item name="android:gridViewStyle">@style/Widget.ListView.Black</item>
	</style>

	<style name="Widget.ListView">
		<item name="android:divider">#66666666</item>
		<item name="android:dividerHeight">2dip</item>
	</style>

	<style name="Widget.ListView.Light">
		<item name="android:background">#FFFFFF</item>
		<item name="android:textColor">#333333</item>
	</style>

	<style name="Widget.ListView.Black">
		<item name="android:background">#000000</item>
		<item name="android:textColor">#FAFAFA</item>
	</style>

	<style name="Divider">
		<item name="android:background">#66666666</item>
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">2dp</item>
		<item name="android:layout_marginTop">5dp</item>
		<item name="android:layout_marginBottom">5dp</item>
	</style>

</resources>